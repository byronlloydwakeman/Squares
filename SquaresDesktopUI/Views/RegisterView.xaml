<UserControl x:Class="SquaresDesktopUI.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SquaresDesktopUI.Views"
             mc:Ignorable="d" Background="LightBlue" FontFamily="Segoe UI Light"
             d:DesignHeight="510" d:DesignWidth="510">
    <StackPanel>
        <TextBlock Text="Register" FontSize="40" HorizontalAlignment="Center" Margin="5 5 5 5"/>
        
        <!--Email-->
        <TextBlock Text="Email" FontSize="20" HorizontalAlignment="Center" Margin="5 10 5 5"/>
        <TextBox Name="Email" HorizontalAlignment="Center" Width="200"/>

        <!--Password-->
        <TextBlock Text="Password" FontSize="20" HorizontalAlignment="Center" Margin="5 10 5 5"/>
        <TextBox Name="Password" HorizontalAlignment="Center" Width="200"/>
        
        <!--Confirm Password-->
        <TextBlock Text="Confirm Password" FontSize="20" HorizontalAlignment="Center" Margin="5 10 5 5"/>
        <TextBox Name="ConfirmPassword" HorizontalAlignment="Center" Width="200"/>
        
        <!--Register-->
        <Button Name="Register" Content="Register" HorizontalAlignment="Center" Width="100" Height="20" Margin="5 20 5 5"/>

    </StackPanel>
</UserControl>
