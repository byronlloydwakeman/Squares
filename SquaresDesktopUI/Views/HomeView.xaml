<UserControl x:Class="SquaresDesktopUI.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SquaresDesktopUI.Views"
             mc:Ignorable="d" Background="LightBlue" FontFamily="Segoe UI Light"
             d:DesignHeight="500" d:DesignWidth="500">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Sign In" FontSize="40" Margin="5 5 5 5" HorizontalAlignment="Center"/>

        <TextBlock Text="Email" FontSize="20" Margin="5 0 5 5" HorizontalAlignment="Center"/>

        <TextBox x:Name="Email" Margin="5 0 5 5" HorizontalAlignment="Center" Width="200" TextWrapping="Wrap"/>

        <TextBlock Text="Password" FontSize="20" Margin="5 5 5 5" HorizontalAlignment="Center"/>

        <TextBox x:Name="Password" Margin="5 0 5 5" HorizontalAlignment="Center" Width="150" TextWrapping="Wrap"/>

        <Button x:Name="Login" Content="Login" HorizontalAlignment="Center" Margin="5 15 5 5" Height="25" Width="100"/>

        <Button x:Name="Register" Content="Register" HorizontalAlignment="Center" Margin="5 5 5 5" Height="25" Width="125"/>
    </StackPanel>
</UserControl>
